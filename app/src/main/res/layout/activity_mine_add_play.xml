<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/add_top_layout"
        layout="@layout/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_top_layout"
        android:background="@color/color_E5E5E5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/add_pic_srl"
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:id="@+id/add_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                     />

                <LinearLayout
                    android:id="@+id/add_update_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/add_select_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/add_select_tv"
                        android:layout_width="@dimen/album_dp_100"
                        android:layout_height="100dp"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/add_play_update_pic_txt" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/add_pic_srl"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/add_play_title_txt"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/add_game_name_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="@string/add_play_hint_title_txt"
                        android:inputType="text"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />


                <RelativeLayout
                    android:id="@+id/add_type_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/add_play_type_txt"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/add_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="@string/add_plat_hint_type_txt"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_row" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />


                <RelativeLayout
                    android:id="@+id/add_type_rl66"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="大区"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/add_type_tv66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="请输入对应内容"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_row" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />


                <RelativeLayout
                    android:id="@+id/add_type_rl77"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="段位"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/add_type_tv77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="请输入对应内容"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_row" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />


                <RelativeLayout
                    android:id="@+id/add_data_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/add_play_data_txt"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/add_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint="@string/add_play_hint_data_txt"
                        android:maxEms="18"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_row" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />

                <RelativeLayout
                    android:id="@+id/add_time_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/add_play_time_txt"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/add_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="@string/add_play_hint_time_txt"
                        android:textSize="@dimen/text_size_15" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_row" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/add_play_price_txt"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/add_price_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_80"
                        android:layout_marginRight="@dimen/padding_20"
                        android:background="@android:color/transparent"
                        android:hint="请输入每小时单价 0-3000"
                        android:inputType="number|numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@color/color_E5E5E5" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_120"
                android:layout_marginTop="@dimen/padding_15"
                android:background="@color/color_FFFFFF">

                <EditText
                    android:id="@+id/add_introduce_et"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="@string/add_play_hine_introduce_txt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/album_dp_10"
                android:layout_marginBottom="@dimen/padding_20"
                android:background="@color/color_FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_one"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_secondstart"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="#D1AE81" />

                        <TextView
                            android:id="@+id/tv_luying"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="点击录制语音介绍（限30s）"
                            android:textColor="#D1AE81" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_two"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_recordstart"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:text="正在录制，完成请点击 "
                                android:textColor="#D1AE81" />

                            <TextView
                                android:id="@+id/tv_secondover"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:text="0s"
                                android:textColor="#D1AE81" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_plan"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding_5"
                            android:layout_gravity="bottom"
                            android:progressDrawable="@drawable/pbstay" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_three"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_20"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_bfzt"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_bfzt_drawable" />

                        <TextView
                            android:id="@+id/tv_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="@dimen/album_dp_10"
                            android:gravity="center"
                            android:text="录制完成"
                            android:textColor="#D1AE81" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/tv_new"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginRight="@dimen/padding_20"
                                android:gravity="right|center"
                                android:text="重录"
                                android:textColor="#D1AE81" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>