<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_game_iv"
        android:layout_width="@dimen/padding_65"
        android:layout_height="@dimen/padding_45"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_toEndOf="@id/search_game_iv"
        android:layout_toRightOf="@id/search_game_iv">

        <RelativeLayout
            android:id="@+id/search_game_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.chengfan.xiyou.view.SignKeyWordTextView
                    android:id="@+id/search_game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    app:signTextColor="@color/color_D1AE81" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/search_game_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_20"
                    android:textColor="@color/color_D1AE81"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/search_game_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_game_name_rl"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_game" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/search_game_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏陪玩"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/search_game_iv"
        android:layout_marginTop="@dimen/padding_20" />
</RelativeLayout>