<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chat_create_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <CheckBox
        android:clickable="false"
        android:id="@+id/select_checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_20"
        style="@style/CustomCheckboxTheme"/>

    <LinearLayout
        android:id="@+id/chat_friend_z_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/select_checkbox"
        android:layout_toRightOf="@id/select_checkbox"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/chat_create_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_20"
            android:text="dsgdf"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/chat_friend_z_ll"
        android:layout_marginLeft="@dimen/padding_60"
        android:background="@color/color_E5E5E5"/>

</RelativeLayout>