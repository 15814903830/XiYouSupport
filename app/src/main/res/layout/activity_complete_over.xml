<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/complete_over_iv"
        android:layout_width="@dimen/padding_65"
        android:layout_height="@dimen/padding_65"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_180"
        android:background="@drawable/complete_go"/>

    <TextView
        android:id="@+id/complete_over_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete_over_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_40"
        android:text="@string/complete_over_txt"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_20"/>

    <TextView
        android:id="@+id/complete_over_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete_over_des_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_20"
        android:text="@string/complete_over_txt"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_15"/>

    <Button
        android:id="@+id/complete_now_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginBottom="160dp"
        android:background="@drawable/xy_going_btn_bg"
        android:text="@string/complete_now_txt"
        android:textColor="@color/color_D1AE81"/>
</RelativeLayout>