<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_20"
              android:layout_marginRight="@dimen/padding_20"
              android:orientation="vertical">

    <com.chengfan.xiyou.view.RegularTextView
        android:id="@+id/ap_dynamic_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_15"/>

    <com.chengfan.xiyou.widget.ninegridview.NineGridView
        android:id="@+id/dynamic_accompany_ngv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ap_dynamic_iv"
        android:layout_width="220dp"
        android:layout_height="220dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.chengfan.xiyou.view.RegularTextView
            android:id="@+id/ap_dynamic_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_13"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/ap_dynamicn_info"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/dynamic_total_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_20"
                android:textColor="@color/color_D1AE81"
                android:textSize="@dimen/text_size_13"/>

            <ImageView
                android:id="@+id/iv_imglike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/ap_dynamic_lick_num"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/dynamic_total_praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_D1AE81"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@color/color_E5E5E5"/>
</LinearLayout>