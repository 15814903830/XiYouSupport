<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.chengfan.xiyou.view.RegularTextView
        android:id="@+id/ap_dynamic_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/padding_20"
        android:lineSpacingMultiplier="1.6"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_15" />

    <com.chengfan.xiyou.widget.ninegridview.NineGridView
        android:id="@+id/dynamic_accompany_ngv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/padding_20" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_dynamic"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="@dimen/padding_10"
        app:cardElevation="@dimen/padding_10"
        app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/ap_dynamic_iv"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_video_dynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_video_bg"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:src="@drawable/icon_new_video" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/padding_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.chengfan.xiyou.view.RegularTextView
            android:id="@+id/ap_dynamic_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_comment_dynamic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/ap_dynamicn_info" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/dynamic_total_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_D1AE81"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_liker_dynamic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/iv_imglike"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/ap_dynamic_lick_num" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/dynamic_total_praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_D1AE81"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_E5E5E5" />
</LinearLayout>