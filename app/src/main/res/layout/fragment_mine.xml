<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F5F5F5"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mine_top_rl"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/mine_top_bg">

        <com.chengfan.xiyou.view.BoldTextView
            android:id="@+id/mine_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="60dp"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/text_size_25"/>

        <LinearLayout
            android:id="@+id/mine_top_phone_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_user_name_tv"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_15"
            android:gravity="center">


            <ImageView
                android:id="@+id/mine_top_phone_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_phone"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/mine_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/mine_top_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="@dimen/padding_20">

            <com.zero.ci.widget.CircleImageView
                android:id="@+id/mine_pic_civ"
                android:layout_width="@dimen/padding_75"
                android:layout_height="@dimen/padding_75"
                app:civ_border_color="@color/color_FFFFFF"
                app:civ_border_width="2dp"
                />

            <ImageView
                android:id="@+id/mini_huiyuan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_huiyuan"
                app:layout_anchor="@+id/mine_pic_civ"
                app:layout_anchorGravity="bottom|center"/>
        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/mie_top_num_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_top_cl"
            android:layout_marginTop="@dimen/padding_35"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mine_guan_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.chengfan.xiyou.view.BoldTextView
                    android:id="@+id/mine_guan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_18"/>

                <com.chengfan.xiyou.view.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_guanzhu_txt"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_fen_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.chengfan.xiyou.view.BoldTextView
                    android:id="@+id/mine_fen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_18"/>

                <com.chengfan.xiyou.view.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_fensi_txt"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_dong_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.chengfan.xiyou.view.BoldTextView
                    android:id="@+id/mine_dong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_18"/>

                <com.chengfan.xiyou.view.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_dongtai_txt"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_middle_ll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="230dp"
        android:layout_marginRight="@dimen/padding_20"
        android:background="@drawable/xy_mine_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mine_order_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_order"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_order_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_game_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_game"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/text_size_18"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_pei_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_money_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_moeny"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/text_size_18"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_qian_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@+id/mine_middle_ll"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_20"
        android:background="@drawable/xy_mine_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="@string/mine_more_txt"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_18"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mine_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20"/>

    </LinearLayout>


</RelativeLayout>