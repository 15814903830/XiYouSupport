<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.WeiXingActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/album_dp_100"
            android:layout_height="@dimen/album_dp_100" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#999999"
        android:text="- 请选择登录方式 -"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_idlogin"
            android:layout_marginTop="@dimen/padding_20"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="@dimen/padding_20"
            android:background="@drawable/xiyou_button_bg"
            android:text="手机号注册登录"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_weixinglogin"
            android:background="@drawable/weixing"
            android:layout_marginTop="@dimen/padding_20"
            android:textColor="#D1AE81"
            android:layout_marginHorizontal="@dimen/padding_20"
            android:text="微信授权登录"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_exist"
            android:textStyle="bold"
            android:textColor="#D1AE81"
            android:textSize="15sp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="已有账号"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>