<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.chengfan.xiyou.widget.ninegridview.NineGridImageView
        android:id="@+id/img_ninegrid_imagecontainer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/img_ninegrid_imagecontainer_delete"
        android:layout_width="@dimen/padding_20"
        android:layout_height="@dimen/padding_20"
        android:layout_gravity="top|right"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginEnd="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:foregroundGravity="top|right"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ninegrid_image_delete"/>

</FrameLayout>