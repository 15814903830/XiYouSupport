<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_marginBottom="@dimen/padding_10"
    >

    <com.zero.ci.widget.CircleImageView
        android:id="@+id/order_user_pic_civ"
        android:layout_width="@dimen/padding_75"
        android:layout_height="@dimen/padding_75"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_toEndOf="@+id/order_user_pic_civ"
        android:layout_toRightOf="@+id/order_user_pic_civ">

        <TextView
            android:id="@+id/order_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfhasodf"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="sdfasdfgdfg"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_15"/>

        <LinearLayout
            android:id="@+id/order_game_name_money_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_user_name_tv"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_mine_order_"/>

            <TextView
                android:id="@+id/order_game_name_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:text="sdfds"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>


        <TextView
            android:id="@+id/order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_game_name_money_ll"
            android:layout_marginTop="@dimen/padding_15"
            android:text="*4"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/order_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_game_name_money_ll"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="sdfsdfsdf"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"/>
    </RelativeLayout>

</RelativeLayout>