<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_20"
    android:layout_marginTop="@dimen/padding_20"
    android:layout_marginRight="@dimen/padding_20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <com.zero.ci.widget.CircleImageView
                android:id="@+id/attention_user_pic_civ"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/attention_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/attention_is_hy_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_15"
                android:background="@drawable/home_huiyuan" />

        </LinearLayout>

        <com.chengfan.xiyou.view.RegularTextView
            android:id="@+id/attention_game_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_D1AE81" />
    </RelativeLayout>


    <TextView
        android:id="@+id/attention_des_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_15" />

    <com.chengfan.xiyou.widget.ninegridview.NineGridView
        android:id="@+id/attention_ngv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10" />

    <ImageView
        android:id="@+id/attention_iv"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="@dimen/padding_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/attention_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/attention_del_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="删除"
                android:textColor="#177EE6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/ap_dynamicn_info" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/attention_comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_20"
                android:textColor="@color/color_D1AE81"
                android:textSize="@dimen/text_size_13" />

            <ImageView
                android:id="@+id/mine_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/ap_dynamic_lick_num" />

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/attention_lick_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_D1AE81"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_E5E5E5" />
</LinearLayout>