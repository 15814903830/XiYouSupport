<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fg_sssd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.zero.ci.widget.CircleImageView
        android:id="@+id/accompany_game_civ"
        android:layout_width="@dimen/padding_75"
        android:layout_height="95dp"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_accomgane_play"
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding_5"
            android:background="@drawable/voled"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="bottom|center"
            android:layout_width="55dp"
            android:layout_height="@dimen/padding_20">

            <ImageView
                android:id="@+id/iv_bfzt_img"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/img_bfzt_drawable"
                android:layout_width="6dp"
                android:layout_height="6dp" />
            <TextView
                android:id="@+id/tv_time"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#D1AE81"
                android:text="12s"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_toEndOf="@id/fg_sssd"
        android:layout_toRightOf="@id/fg_sssd">


        <RelativeLayout
            android:id="@+id/accompany_game_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.chengfan.xiyou.view.MediumTextView
                    android:id="@+id/accompany_game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDsdfdsdf"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/accompany_game_hy_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_huiyuan"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <com.chengfan.xiyou.view.MediumTextView
                    android:id="@+id/accompany_game_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_20"
                    android:text=""
                    android:textColor="@color/color_D1AE81"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:id="@+id/tv_totle"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/accompany_game_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accompany_game_name_rl"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center">

            <ImageView
                android:id="@+id/accompany_game_sex_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_nan"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:layout_marginLeft="@dimen/padding_5"
                android:id="@+id/accompany_game_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13"/>

            <com.chengfan.xiyou.view.RegularTextView
                android:id="@+id/accompany_game_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>


        <com.chengfan.xiyou.view.RegularTextView
            android:gravity="center"
            android:id="@+id/accompany_game_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/accompany_game_name_ll"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/xy_text_bg"
            android:text="珠海"
            android:textSize="@dimen/text_size_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/accompany_game_address_tv"
            android:layout_marginTop="@dimen/padding_20"
            />
    </RelativeLayout>


</RelativeLayout>