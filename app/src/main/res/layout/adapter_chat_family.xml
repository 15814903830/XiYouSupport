<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_family_iv"
        android:layout_width="@dimen/padding_100"
        android:layout_height="@dimen/padding_75"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_toEndOf="@+id/chat_family_iv"
        android:layout_toRightOf="@+id/chat_family_iv">

        <LinearLayout
            android:id="@+id/search_user_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/chat_family_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你不知道的事"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_user_id_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_user_name_ll"
            android:layout_marginTop="@dimen/padding_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.zero.ci.widget.CircleImageView
                    android:id="@+id/chat_family_user_civ"
                    android:layout_width="@dimen/padding_25"
                    android:layout_height="@dimen/padding_25"
                    />

                <TextView
                    android:id="@+id/chat_family_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:text="1223456"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"/>
            </LinearLayout>


            <TextView
                android:id="@+id/chat_family_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="33成员"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13"/>


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/search_family_iv"
        android:layout_marginTop="@dimen/padding_20"
        />
</RelativeLayout>