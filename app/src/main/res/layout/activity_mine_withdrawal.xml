<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/with_top_layout"
        layout="@layout/layout_top"/>

    <LinearLayout
        android:id="@+id/with_middle_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/with_top_layout"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/with_num_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="sdfsfsddfsf"
            android:textColor="@color/color_333333"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/with_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sdfsdfsfs"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/with_middle_ll"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_15"
            android:text="@string/withdrawal_type_txt"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_20"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/withdrawal_user_name_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/with_name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_80"
                android:layout_marginRight="@dimen/padding_20"
                android:background="@android:color/transparent"
                android:hint="@string/withdrawal_hint_user_name_txt"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextClusterForward="@id/complete_age_et"
                android:singleLine="true"
                android:textSize="@dimen/text_size_15"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/withdrawal_phone_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/with_phone_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_80"
                android:layout_marginRight="@dimen/padding_20"
                android:background="@android:color/transparent"
                android:hint="@string/withdrawal_hint_phone_txt"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextClusterForward="@id/complete_age_et"
                android:singleLine="true"
                android:textSize="@dimen/text_size_15"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/withdrawal_zfb_txt"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/with_zfb_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_80"
                android:layout_marginRight="@dimen/padding_20"
                android:background="@android:color/transparent"
                android:hint="@string/withdrawal_hint_zfb_txt"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextClusterForward="@id/complete_age_et"
                android:singleLine="true"
                android:textSize="@dimen/text_size_15"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"/>

    </LinearLayout>

    <Button
        android:id="@+id/with_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_E5E5E5"
        android:text="@string/withdrawal_submit_txt"
        android:textColor="@color/color_D1AE81"
        android:textSize="@dimen/text_size_15"/>
</RelativeLayout>